{
  "manifest_version": 3,
  "name": "Math Notation AI",
  "version": "1.0.0",
  "description": "Screenshot any math content - from symbols to equations - for instant AI explanations and contextual understanding.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "commands": {
    "screenshot-explain": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Screenshot and explain math"
    }
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.railway.app/*",
    "https://*.vercel.app/*",
    "https://*.ondigitalocean.app/*",
    "https://*.run.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/katex/katex.min.js",
        "lib/katex/auto-render.min.js",
        "js/content.js"
      ],
      "css": [
        "lib/katex/katex.min.css",
        "css/tooltip.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Math Notation AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/tooltip.css",
        "lib/katex/fonts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
